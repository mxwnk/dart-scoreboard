generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
}

model Player {
  id   String @id @default(cuid())
  name String

  createdAt DateTime @default(now()) @map(name: "created_at")
}


model GameEvent {
  id      String @id @default(cuid())
  gameId  String
  type    String
  payload Json

  createdAt DateTime @default(now()) @map(name: "created_at")
}
