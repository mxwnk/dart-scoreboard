generator client {
  provider = "prisma-client-js"
  output   = "app/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
}

model Player {
  id   String @id @default(cuid())
  name String

  createdAt DateTime @default(now()) @map(name: "created_at")
}

model GameEvent {
  id        String    @id // we need to know the id before we save the event for createdBy reference
  createdBy String?   @map(name: "created_by")
  gameId    String
  payload   Json
  type      EventType

  createdAt DateTime @default(now()) @map(name: "created_at")
}

enum EventType {
  GameCreated
  PlayerAdded
  GameStarted

  TurnStarted
  DartThrown

  GameOver
  LegStarted
  LegWon
}
